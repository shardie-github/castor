# ============================================================================
# REQUIRED VARIABLES (Must be set for production)
# ============================================================================

# Database Configuration
# REQUIRED: Use DATABASE_URL (recommended for production, works with Supabase and any PostgreSQL provider)
# Format: postgresql://user:password@host:port/database
# Example for Supabase: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
# Example for local: postgresql://postgres:postgres@localhost:5432/podcast_analytics
DATABASE_URL=

# Option 2: Individual connection parameters (for backward compatibility, used if DATABASE_URL is not set)
# REQUIRED if DATABASE_URL is not set
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=podcast_analytics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
# REQUIRED: Redis connection for caching and sessions
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
# REQUIRED: Generate random secrets for production (minimum 32 characters)
# Generate with: openssl rand -hex 32
JWT_SECRET=change-me-in-production-generate-random-secret-min-32-chars
ENCRYPTION_KEY=change-me-in-production-generate-random-key-min-32-chars

# ============================================================================
# OPTIONAL VARIABLES (Can be left empty for development)
# ============================================================================

# Read Replica (optional, for read-heavy workloads)
# If set, read queries will be routed to the replica
POSTGRES_READ_REPLICA_HOST=
POSTGRES_READ_REPLICA_PORT=5432

# API Configuration
API_URL=http://localhost:8000
API_KEY=
API_SECRET_KEY=

# Stripe Payment Processing (optional, required for payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email Service (optional, required for email functionality)
SENDGRID_API_KEY=

# AWS Configuration (optional, for S3, SES, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Monitoring (optional, defaults shown)
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3000

# Environment
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# SUPABASE CONFIGURATION (Optional - for Supabase-hosted databases)
# ============================================================================
# Note: If using Supabase, set DATABASE_URL above using the connection string from Supabase dashboard
# These variables are for Supabase-specific features (auth, storage, etc.) if needed
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ============================================================================
# FRONTEND CONFIGURATION (Required for Next.js frontend)
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SITE_URL=https://castor.app

# ============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# ============================================================================
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
WIX_API_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=
GOOGLE_SHEETS_CREDENTIALS_PATH=

# Host API Credentials (optional)
LIBSYN_API_KEY=
ANCHOR_ACCESS_TOKEN=
BUZZSPROUT_API_KEY=

# AI Provider API Keys (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# OAuth Configuration (optional)
OAUTH_CLIENT_ID=default_client
OAUTH_CLIENT_SECRET=default_secret
OAUTH_REDIRECT_URI=http://localhost:8000/callback

# ============================================================================
# CORS & SECURITY (Optional, defaults shown)
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://castor.app
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600
ENABLE_SECURITY_HEADERS=true
FORCE_HTTPS=true
HSTS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000
WAF_ENABLED=true
SESSION_TIMEOUT_MINUTES=30
SESSION_SECURE=true

# ============================================================================
# DISASTER RECOVERY (Optional)
# ============================================================================
PRIMARY_REGION=us-east-1
SECONDARY_REGION=us-west-2
BACKUP_STORAGE_PATH=/backups

# Vanity URLs (optional)
VANITY_URL_BASE=https://track.example.com

# ============================================================================
# FEATURE FLAGS (Optional, defaults shown)
# ============================================================================
ENABLE_ETL_CSV_UPLOAD=false
ENABLE_MATCHMAKING=false
ENABLE_IO_BOOKINGS=false
ENABLE_DEAL_PIPELINE=false
ENABLE_NEW_DASHBOARD_CARDS=false
MATCHMAKING_ENABLED=false
ENABLE_ORCHESTRATION=false
ENABLE_MONETIZATION=false
ENABLE_AUTOMATION_JOBS=false

# ============================================================================
# AI AGENT MESH INTEGRATIONS (Optional)
# ============================================================================
TIKTOK_ADS_API_KEY=
TIKTOK_ADS_SECRET=
