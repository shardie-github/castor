# Staging Environment Configuration
# Copy this file and customize for your staging environment

# Environment
ENVIRONMENT=staging
DEBUG=false

# Database Configuration
POSTGRES_HOST=staging-db.example.com
POSTGRES_PORT=5432
POSTGRES_DATABASE=podcast_analytics_staging
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=staging_password_change_me

# Redis Configuration
REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password

# API Configuration
API_URL=https://staging-api.castor.app
NEXT_PUBLIC_API_URL=https://staging-api.castor.app
NEXT_PUBLIC_SITE_URL=https://staging.castor.app

# Security (MUST be changed from defaults)
JWT_SECRET=staging_jwt_secret_min_32_chars_long_change_me
ENCRYPTION_KEY=staging_encryption_key_min_32_chars_long_change_me

# Stripe Payment Processing (Staging/Test keys)
STRIPE_SECRET_KEY=sk_test_staging_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_staging_key_here

# Email Service (Staging)
SENDGRID_API_KEY=SG.staging_key_here

# Supabase Configuration (Staging)
SUPABASE_URL=https://staging-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=staging_service_role_key
SUPABASE_ANON_KEY=staging_anon_key
NEXT_PUBLIC_SUPABASE_URL=https://staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=staging_anon_key

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_URL=http://staging-grafana.example.com:3000

# CORS & Security
CORS_ALLOWED_ORIGINS=https://staging.castor.app,https://staging-admin.castor.app
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600
ENABLE_SECURITY_HEADERS=true
FORCE_HTTPS=true
HSTS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=2000
RATE_LIMIT_PER_DAY=20000

# Feature Flags (Staging - enable more features for testing)
ENABLE_ETL_CSV_UPLOAD=true
ENABLE_MATCHMAKING=true
ENABLE_IO_BOOKINGS=true
ENABLE_DEAL_PIPELINE=true
ENABLE_NEW_DASHBOARD_CARDS=true
ENABLE_ORCHESTRATION=true
ENABLE_MONETIZATION=true
ENABLE_AUTOMATION_JOBS=true

# AWS Configuration (Staging)
AWS_ACCESS_KEY_ID=staging_aws_key
AWS_SECRET_ACCESS_KEY=staging_aws_secret
AWS_REGION=us-east-1

# OAuth Configuration (Staging)
OAUTH_CLIENT_ID=staging_client_id
OAUTH_CLIENT_SECRET=staging_client_secret
OAUTH_REDIRECT_URI=https://staging-api.castor.app/callback

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
SESSION_SECURE=true

# Disaster Recovery (Staging)
PRIMARY_REGION=us-east-1
SECONDARY_REGION=us-west-2
BACKUP_STORAGE_PATH=/backups/staging

# Logging
LOG_LEVEL=INFO
