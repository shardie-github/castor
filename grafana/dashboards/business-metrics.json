{
  "dashboard": {
    "title": "Business Metrics Dashboard",
    "tags": ["business", "metrics", "kpi"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "5m",
    "panels": [
      {
        "id": 1,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "users_active_total",
            "legendFormat": "Active Users"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Campaigns Created",
        "type": "stat",
        "targets": [
          {
            "expr": "campaigns_created_total",
            "legendFormat": "Total Campaigns"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Reports Generated",
        "type": "stat",
        "targets": [
          {
            "expr": "reports_generated_total",
            "legendFormat": "Total Reports"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Revenue",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(invoice_amount)",
            "legendFormat": "Total Revenue"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "User Growth",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(users_active_total[1h])",
            "legendFormat": "Growth Rate"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 6,
        "title": "Campaign Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "campaigns_created_total",
            "legendFormat": "Created"
          },
          {
            "expr": "campaigns_completed_total",
            "legendFormat": "Completed"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 7,
        "title": "Attribution Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(attribution_events_total[5m])",
            "legendFormat": "{{method}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 8,
        "title": "Report Generation Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, report_generation_time_bucket)",
            "legendFormat": "p95"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      }
    ]
  }
}
